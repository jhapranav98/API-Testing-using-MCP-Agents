FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements-streamlit.txt .

# Install all dependencies at once to reduce layers
RUN pip install --no-cache-dir -r requirements-streamlit.txt

# Copy application code
COPY . .

# Create necessary directories if not exist
RUN mkdir -p frontend/components frontend/config frontend/services frontend/styles frontend/utils

# Expose port for Streamlit
EXPOSE 8501

# Set environment variables
ENV PORT=8501
ENV HOST=0.0.0.0
ENV PYTHONUNBUFFERED=1

# Command to run the Streamlit app
CMD ["streamlit", "run", "frontend/multi_agent_streamlit.py", "--server.port=8501", "--server.address=0.0.0.0"]
