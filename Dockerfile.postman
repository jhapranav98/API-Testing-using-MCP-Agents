FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    graphviz \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install additional packages that might be needed
RUN pip install --no-cache-dir fastapi uvicorn diagrams

# Install UV for better package management (optional but following strands pattern)
RUN curl -LsSf https://astral.sh/uv/install.sh | sh

# Find where uv is installed and create a symlink in a standard PATH location
RUN find / -name uv -type f 2>/dev/null | head -1 | xargs -I{} ln -sf {} /usr/local/bin/uv && \
    find / -name uvx -type f 2>/dev/null | head -1 | xargs -I{} ln -sf {} /usr/local/bin/uvx

# Copy application code
COPY . .

# Expose port for FastAPI
EXPOSE 8002

# Set environment variables
ENV PORT=8002
ENV HOST=0.0.0.0
ENV PYTHONUNBUFFERED=1

# Command to run the Postman agent FastAPI server
CMD ["uvicorn", "postman_agent_server:app", "--host", "0.0.0.0", "--port", "8002", "--timeout-keep-alive", "300"]
